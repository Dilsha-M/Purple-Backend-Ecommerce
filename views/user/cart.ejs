<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
</head>
<body>
    <div class="container">
        <h1>Your Shopping Cart</h1>

        <% if (cart && Array.isArray(cart.items) && cart.items.length > 0) { %>
            <table class="cart-table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                       <th>image</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>
                    <% cart.items.forEach(item => { %>
                        <tr>
                            <td><%= item.product.name %></td>
                            <td>
                                <form action="/user/cart/update-cart/<%= item.product._id %>" method="POST">
                                    <input 
                                        type="number" 
                                        name="quantity" 
                                        value="<%= item.quantity %>" 
                                        min="1" 
                                        class="quantity-input"
                                    >
                                    <button type="submit">Update</button>
                                </form>
                                
                            </td>
                            <td><img src="<%= item.product.image %>"width="150" height="150" alt=""></td>
                            
                            <td>$<%= item.product.price %></td>
                            <td>$<%= item.product.price * item.quantity %></td>
                            <td>
                                <form action="/user/remove-from-cart/<%= item.product._id %>" method="post">

                                    <button type="submit">Remove</button>
                                </form>
                                
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="empty-cart-message">Your cart is empty.</p>
        <% } %>
    </div>

    <div class="cart-footer">
        <a href="/user/products">Go back</a>
    </div>
</body>
</html> 







 
