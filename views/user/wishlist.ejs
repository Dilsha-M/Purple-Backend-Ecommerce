<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Wishlist</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container wishlist-container">
        <h1>Your Wishlist</h1>

        <% if (wishlist && wishlist.length > 0) { %>
            
            <table class="wishlist-table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Add to Cart</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>
                    <% wishlist.forEach(function(product) { %>
                        <tr>
                            <td><%= product.name %></td>
                            <td> <a href="/user/product/<%=product._id %>"><img src="<%= product.image %>" width="120" height="120" alt="<%= product.name %>"></a> </td>
                            <td>$<%= product.price %></td>
                         
                            <td>
                              
                                <form action="/user/add-to-cart/<%= product._id %>" method="POST">
                                    <button type="submit" class="add-cart-btn">Add to Cart</button>
                                </form>
                            </td>
                            <td>
                              
                                <form action="/user/remove-from-wishlist/<%= product._id %>" method="POST">
                                    <button type="submit" class="remove-btn">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>Your wishlist is empty.</p>
        <% } %>
    </div>

    <div class="wishlist-footer">
        <a href="/user/products">Back to Products</a>
    </div>
</body>
</html>
